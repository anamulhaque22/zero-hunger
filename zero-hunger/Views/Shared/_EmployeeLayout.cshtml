﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="~/Content/DashboardShideBar.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <button type="button" id="sidebarCollapse" class="btn btn-info">
                <i id="leftSidebarToggleBtnLeft" class="fas fa-angle-left"></i>
                <i id="leftSidebarToggleBtnRight" class="fas fa-angle-right" style="display: none;"></i>

            </button>
            <div class="sidebar-header">
                <h3>NGO Deashboard</h3>
            </div>

            <ul class="list-unstyled components">

                <li>
                    <a href="@Url.Action("Index", "Employee")">Collect Request</a>
                </li>
                <li>
                    <a href="@Url.Action("EmployeeList", "Employee")">Employee List</a>
                </li>

                <li>
                    <a href="@Url.Action("CollectedFood", "Employee")">Collected Food</a>
                </li>

                <li>
                    <a href="@Url.Action("DeliveredFoodList", "Employee")">Delivered Food</a>
                </li>

                <li>
                    <a href="@Url.Action("AssigndEmployeeCollReqList", "Employee")">Assign To Collect</a>
                </li>
                <li>
                    <a href="@Url.Action("RestaurantList", "Employee")">Restaurant List</a>
                </li>


            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content">
            <div class="page-title py-2 d-flex justify-content-between px-4">
                <h3 class=" text-white">@ViewBag.HeadingTitle</h3>
                @if (Session["EmployeeName"] != null)
                {
                    <p class="text-white">
                        <span>@Session["EmployeeName"].ToString()</span>
                        <span><a href="@Url.Action("Logout", "Employee")">Logout</a></span>
                    </p>
}
else
            {
                <a href="@Url.Action("Login", "Employee")">Login</a>
            }

            </div>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                const leftArrow = $("#leftSidebarToggleBtnLeft");
                const rightArrow = $("#leftSidebarToggleBtnRight");
                if (leftArrow.is(":visible")) {
                    leftArrow.hide();
                    rightArrow.show();
                } else {
                    leftArrow.show();
                    rightArrow.hide();
                }
            });
        });
    </script>
</body>
</html>