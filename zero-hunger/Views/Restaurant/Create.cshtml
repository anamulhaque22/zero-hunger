@model zero_hunger.DTO.RestaurantDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/all.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h3 class="text-center">Create a Restaurant Account</h3>
    </div>
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <form method="post" action="" class="shadow-lg p-4 mb-5 bg-body-tertiary rounded" style="min-width: 400px" enctype="multipart/form-data">
            <div class="form-group mb-3 d-flex flex-column">
                <label class="form-label" for="title">Name</label>
                <input type="text" name="Name" class="form-control" id="title" value="@(Model == null? "":Model.Name)" placeholder="Name">
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="email">Email</label>
                <input type="text" name="Email" class="form-control" id="eamil" placeholder="Email">
                <span class="text-danger">@Html.ValidationMessage("Email")</span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" for="password">Password</label>
                <input type="password" name="Password" class="form-control" id="password" placeholder="Password">
                <span class="text-danger">@Html.ValidationMessage("Password")</span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="Phone">Phone</label>
                <input type="text" name="Phone" class="form-control" id="Phone" placeholder="Phone">
                <span class="text-danger">@Html.ValidationMessage("Phone")</span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="Address">Address</label>
                <input type="text" name="Address" class="form-control" id="Address" placeholder="Address">
                <span class="text-danger">@Html.ValidationMessage("Address")</span>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Registration</button>
            </div>
            <p class="text-center mt-3">Have already an account? <a href="@Url.Action("Login", "Restaurant")">Login Here</a></p>
        </form>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>